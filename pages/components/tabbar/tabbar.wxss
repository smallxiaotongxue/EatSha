@import "../../../assets/component-wxss/icon.wxss";

.tabbar {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 120rpx;
  background: #fff;
  display: flex;
  z-index: 10;
}
.tabbar .iconfont {
  font-size: 50rpx;
  color: #666;
}
.tabbar-item {
  display: flex;
  flex: 1;
  justify-content: center;
  align-items: center;
  background: #fff;
}
.tabbar-item:active {
  transition: all .3s;
  background: #d2d2d2;
}
