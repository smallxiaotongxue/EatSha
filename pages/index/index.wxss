/**index.wxss**/

.userinfo {
  display: flex;
  align-items: center;
  align-self:flex-start;
  margin: 20rpx;
}

.userinfo button {
  width: 200rpx;
  height: 30px;
  line-height: 30px;
  font-size: 14px;
  border-radius: 30px;
}

.bg-mask {
  position: fixed;
  width: 100vw;
  height: 100vh;
  top: 0;
  left: 0;
  z-index: -1;
  background: rgba(0, 0, 0, 0.25);
}

.bg {
  position: fixed;
  width: 100%;
  height: 100%;
  z-index: -2;
}

.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #fff;
  letter-spacing: 2rpx;
}

.big-title {
  margin-left: 40rpx;
  color: #fff;
  font-size: 70rpx;
  font-weight: bold;
  align-self:flex-start;
}

.fixed-bottom-3 {
  position: fixed;
  text-align: center;
  bottom: 30%;
}
